<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:minHeight="60dp" >

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="Event"
                android:layout_width="300dp"
                android:layout_height="wrap_content" android:id="@+id/eventCellTV" android:textAlignment="textStart"
                android:clickable="false" android:fontFamily="@font/catamaran"
                android:radius="20dp"
                android:minHeight="60dp" android:layout_weight="1" android:backgroundTint="@color/light_blue"
        />
        <CheckBox
                android:layout_width="18dp"
                android:layout_height="match_parent" android:id="@+id/checkBox2" android:layout_weight="1"
                android:buttonTint="@color/dark_blue"/>
    </LinearLayout>


    <!-- Rectangle 1 -->

</LinearLayout>